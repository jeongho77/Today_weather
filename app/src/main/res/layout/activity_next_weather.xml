<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/mainLayout"
    android:background="@drawable/morning_bg">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="vertical">

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="5/10 (수)"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/mainIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/cloud1"></ImageView>

        <TextView
            android:id="@+id/Main_temp"
            android:layout_width="wrap_content"
            android:layout_height="82dp"
            android:layout_gravity="center"
            android:shadowColor="@color/black"
            android:shadowDx="4"
            android:shadowDy="1"
            android:shadowRadius="6"
            android:text="22℃"
            android:textColor="@color/white"
            android:textSize="70dp" />

        <!-- 일반 텍스트 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:shadowColor="@color/black"
                android:shadowDx="4"
                android:shadowDy="1"
                android:shadowRadius="6"
                android:text="울산"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="@color/black"
                android:shadowDx="4"
                android:shadowDy="1"
                android:shadowRadius="6"
                android:text="|  PM 10 : 40"
                android:textColor="@color/white"
                android:textSize="18dp" />
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical"
        android:background="#80FFFFFF"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="2dp"
        android:layout_marginTop="0dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/day_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Thursday"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:paddingTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="end"
                android:layout_gravity="end"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/maxtemp_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:textSize="30sp"
                    android:text="18°"
                    android:textColor="@color/red"
                    android:paddingTop="10dp"
                    android:layout_marginRight="10dp"
                    />

                <TextView
                    android:id="@+id/mintemp_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:paddingTop="10dp"
                    android:textSize="30sp"
                    android:text="18°"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/blue"/>

                <ImageView
                    android:id="@+id/weather_1"
                    android:layout_width="67dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:background="@drawable/pink_cloudy"
                    android:gravity="end"
                    android:textSize="30sp"
                    />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="5px"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/cardview_dark_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/day_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Thursday"
                android:textColor="@color/black"
                android:paddingTop="10dp"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="end"
                android:layout_gravity="end"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/maxtemp_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:textSize="30sp"
                    android:textColor="@color/red"
                    android:paddingTop="10dp"
                    android:layout_marginRight="10dp"
                    android:text="18°"/>

                <TextView
                    android:id="@+id/mintemp_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:paddingTop="10dp"
                    android:textSize="30sp"
                    android:text="18°"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/blue"
                    />

                <ImageView
                    android:id="@+id/weather_2"
                    android:layout_width="67dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:background="@drawable/pink_mooncloudy"
                    android:gravity="end"
                    android:textSize="30sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="5px"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/cardview_dark_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/day_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Thursday"
                android:textColor="@color/black"
                android:paddingTop="10dp"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="end"
                android:layout_gravity="end"
                android:orientation="horizontal"
               >
                <TextView
                    android:id="@+id/maxtemp_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:textSize="30sp"
                    android:paddingTop="10dp"
                    android:textColor="@color/red"
                    android:text="18°"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/mintemp_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:paddingTop="10dp"
                    android:gravity="end"
                    android:layout_marginRight="10dp"
                    android:textSize="30sp"
                    android:textColor="@color/blue"
                    android:text="18°"/>

                <ImageView
                    android:id="@+id/weather_3"
                    android:layout_width="67dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:background="@drawable/pink_sun"
                    android:gravity="end"
                    android:textSize="30sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="5px"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/cardview_dark_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/day_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Thursday"
                android:textColor="@color/black"
                android:paddingTop="10dp"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:gravity="end"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/maxtemp_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:paddingTop="10dp"
                    android:gravity="end"
                    android:text="18°"
                    android:textColor="@color/red"
                    android:textSize="30sp"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/mintemp_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:paddingTop="10dp"
                    android:text="18°"
                    android:textColor="@color/blue"
                    android:textSize="30sp"
                    android:layout_marginRight="10dp"/>

                <ImageView
                    android:id="@+id/weather_4"
                    android:layout_width="67dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:background="@drawable/pink_rain"
                    android:gravity="end"
                    android:textSize="30sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="5px"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/cardview_dark_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <TextView
                android:id="@+id/day_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="5dp"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:text="6/28 금요일"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="end"
                android:layout_gravity="end"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/maxtemp_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginRight="10dp"
                    android:text="24°"
                    android:gravity="end"
                    android:paddingTop="5dp"
                    android:textColor="@color/red"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/mintemp_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginRight="10dp"
                    android:gravity="end"
                    android:text="19°"
                    android:paddingTop="5dp"
                    android:textColor="@color/blue"
                    android:textSize="30sp" />

                <ImageView
                    android:id="@+id/weather_5"
                    android:layout_width="67dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:textSize="30sp"
                    android:background="@drawable/pink_rain"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>